<div class="container teal">
  <div class="row">
    <div class="col s12" style:"width:100%">
      <h5 class="white-text">Log In</h5>

      {{#if message}}
      <div class="alert alert-danger">{{message}}</div>
      {{/if}}

      <form action="/users/login" method="POST" class="auth-form">
        <p class="input-field">
          <input type="email" name="email" placeholder="Email">
        </p>
        <p class="input-field">
          <input type="password" name="password" placeholder="Password">
        </p>
        <p class="input-field">
          <input type="submit" value="Log In" class="btn waves-effect waves-light">
        </p>
      </form>
    </div>
  </div>
</div>
