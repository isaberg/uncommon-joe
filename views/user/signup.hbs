<div class="container teal">
  <div class="row">
    <div class="col s12" style:"width:100%">
      <h5 class="white-text">Create an Account</h5>

      {{#if message}}
      <div class="alert alert-danger">{{message}}</div>
      {{/if}}


      <form action="/user/signup" method="POST" class="auth-form">
        <p class="input-field">
          <input type="email" name="email" placeholder="Email">
        </p>
        <p class="input-field">
          <input type="password" name="password" placeholder="Password">
        </p>
        <p>Select your organization.</p>
        <p>
          <label for="choice1">
            <input id="choice1" name="orgName" type="radio" value="General Assembly" checked />
            <span style="color:white">General Assembly</span>
          </label>
        </p>
        <p>
          <label for="choice2">
            <input id="choice2" name="orgName" type="radio" value="DC Tech Meetup"/>
            <span style="color:white">DC Tech Meetup</span>
          </label>
        </p>
        <p class="input-field">
          <input type="text" name="firstName" placeholder="First Name">
        </p>
        <p class="input-field">
          <input type="text" name="lastName" placeholder="Last Name">
        </p>
        <p class="input-field">
          <input type="text" name="zipCode" placeholder="ZIP code for home?">
        </p>
        <p class="input-field">
          <input type="submit" value="Sign Up" class="btn waves-effect waves-light">
        </p>
      </form>
    </div>
  </div>
</div>
